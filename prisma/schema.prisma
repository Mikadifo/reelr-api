generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model List {
    id   Int    @id @default(autoincrement())
    name String

    userId Int
    user   User @relation(fields: [userId], references: [id])

    movies Movie[]

    @@unique([name, userId])
}

model Movie {
    id     Int     @id @default(autoincrement())
    name   String
    genre  String
    public Boolean @default(false)
    img    String
    year   Int
    rating Int?

    userId Int
    user   User @relation(fields: [userId], references: [id])

    lists List[]

    @@unique([name, userId])
}

model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    username String @unique
    password String

    movies Movie[]
    lists  List[]
}
